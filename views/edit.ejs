<div id="mtop" class="ui main text container segment">
  <h1 class="ui huge header">Edit <%= blog.title %></h1>
  
  <form id="inline" class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
    <div class="ui field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    
    <div class="ui field">
      <label>Image url</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>">
    </div>
    
    <div class="ui field">
      <label>Body</label>
      <textarea name="blog[body]"><%= blog.body %></textarea>
    </div>
  <input class="ui secondary button" tabindex="0" type="submit" value="Submit">
  </form>
    <form id="inline"action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
      <button class="ui red basic button">Delete Blog</button>
    </form>
  </div>
</div>


