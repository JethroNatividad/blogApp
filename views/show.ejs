<%- include("partials/top") %>

  <div id="mtop" class="ui main text container segment">
    <p class="date"> <%= blog.date.toDateString() %> </p>
    <div class="ui centered rounded image">
      <img src="<%= blog.image %>">
    </div>
    <div class="content">
      <h1 class="header tac">
        <%= blog.title %>
      </h1>
      <div class="description">
        <p>
          <%= blog.body%>
        </p>
      </div>
      <a tabindex="0" class="ui black basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
    </div>
  </div>
  
  <div class="ui comments container segment">
        <a class="ui black button" href="/blogs/<%= blog._id %>/comments/new">Comment</a>
    <hr>
    <% if(blog.comments){ %>
      <% blog.comments.forEach((comment)=>{ %>
    <div class="comment">
      <div class="content">
        <a class="author"><%= comment.author %></a>
        <div class="metadata">
          <span class="date">2 days ago</span>
        </div>
      </div>
      <div class="text">
        <%= comment.text %>
      </div>
    </div>
      <% }) %>
    <% } %>
  </div>
  
<%- include("partials/bot") %>